<Window
    x:Class="WpfApp3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="175"
    mc:Ignorable="d">
    <GroupBox Height="50">
        <GroupBox.Header>
            <TextBlock Text="Zip Code" />
        </GroupBox.Header>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Name="uxTxtZip"
                Width="100"
                CharacterCasing="Upper"
                Text="{Binding Zip,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                Height="25" />
            <Button
                x:Name="uxBtnSubmit"
                Grid.Column="1"
                Width="60"
                Height="25"
                Content="Submit"
                Click="uxBtnSubmit_Click"
                IsEnabled="{Binding IsValidZip,UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </GroupBox>
</Window>
